    {
      "parameters": {
        "jsCode": "// Collect results for update and response\nconst items = $input.all();\nconst first = items[0].json;\n\nreturn {\n  meeting_id: first.meeting_id,\n  summary: first.summary,\n  action_items_count: items.length,\n  action_items: items.map(i => ({\n    title: i.json.extracted_text?.split(':')[0] || 'Aufgabe',\n    assigned_to: i.json.assigned_to,\n    due_date: i.json.due_date\n  }))\n};"
      },
